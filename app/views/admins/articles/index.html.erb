<div class="row">
  <div class="col-xs-offset-2 col-xs-10"><br><br><br><br><br><br>
    <h4><span style="background-color: #afeeee">記事一覧</span></h4>
    <section>
          <table class="table"><br>
            <thead></thead>
            <tbody>
              <% @article.each do |article| %>
        		    <td>
        		      <%= link_to admins_article_path(article.id) do %>
                    <%= attachment_image_tag article, :image, size: "200x170" %><br>
                  <% end %>
                  <div class="name11"><%= article.title %></div>
                  <div class="name11"><%= article.introduction %></div>
                </td>
              <% end %>
            <tbody>
          </table>
        </section>
        <div class="btn1"><br><br>
          <%= link_to "記事を投稿する", new_admins_article_path %>
        </div>
  </div>
</div>