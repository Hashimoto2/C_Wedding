<div class="row">
  <div class="col-xs-7"><br><br><br><br><br>
    <div class="show">
      <section>
        <table class="table">
          <thead></thead>
          <tbody>
    		    <td>
    		      <div class="title4"><strong><%= @article.title %></strong></div><br>
    		      <div class="image11"><%= attachment_image_tag @article, :image, size:'718x490' %></div><br>
    		      <div class="introduction3"><%= @article.introduction %></div><br>
    		      <div class="image11"><%= attachment_image_tag @article, :image2, size:'718x490' %></div><br>
    		      <div class="introduction3"><%= @article.introduction2 %></div><br>
            </td>
            <tr>
              <td><div class="edit1"><%= link_to "削除する", admins_article_path(@article.id), method: :delete, class: 'btn btn-danger' %></div></td><br>
            </tr>
            <td>
              <% @article.comments.each do |comment| %>
                <div class="name11">コメント；<%= comment.comment %></div><br>
                <div class="col-md-12 edit-button">
                  <%= link_to '口コミを削除', admins_comment_path(id:comment.id), method: :delete, class:'btn btn-default' %>
                </div>
              <% end %>
            </td>
          <tbody>
        </table>
      </section>
    </div>
  </div>
</div>