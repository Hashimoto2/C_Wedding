<div class="row">
  <div class="col-xs-8"><br><br><br><br><br><br>
    <section>
      <table class="table">
        <thead></thead>
        <tbody>
    		    <td>
    		      <div class="name11"><%= @article.title %></div>
    		      <div class="image11"><%= attachment_image_tag @article, :image, size:'200x170' %></div>
    		      <div class="name11"><%= @article.introduction %></div>
    		      <div class="image11"><%= attachment_image_tag @article, :image2, size:'200x170' %></div>
    		      <div class="name11"><%= @article.introduction2 %></div>
    		      <p><%= link_to "削除する", admins_article_path(@article.id), method: :delete, class: 'btn btn-danger' %></p>
            </td>
        <tbody>
      </table>
      <% @article.comments.each do |comment| %>
        <div class="name11"><%= comment.comment %></div>
        <div class="col-md-12 edit-button">
          <%= link_to '口コミを削除', admins_comment_path(id:comment.id), method: :delete, class:'btn btn-default' %>
        </div>
      <% end %>
    </section>
  </div>