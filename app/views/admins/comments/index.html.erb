<div class="row">
  <div class="col-xs-offset-2 col-xs-10"><br><br><br><br><br>
    <h4><span style="background-color: #afeeee">コメント一覧</span></h4>
    <section>
      <table class="table"><br>
        <thead></thead>
        <tbody>
          <% @articles.each do |article| %>
            <% if article.comments.exists? %>
      		    <td>
      		      <%= link_to admins_article_path(article.id) do %>
                  <%= attachment_image_tag article, :image, size: "200x170" %><br>
                <% end %>
                <div class="name11"><strong><%= article.title %></strong></div>
                <div class="name11"><%= article.introduction %></div>
                <% article.comments.each do |comment| %>
                  <div class="name11">コメント；<%= comment.comment %></div><br>
                  <div class="col-md-12 edit-button">
                    <%= link_to '口コミを削除', admins_comment_path(id:comment.id), method: :delete, class:'btn btn-default'%>
                  </div>
                <% end %>
              </td>
            <% end %>
          <% end %>
        <tbody>
      </table>
    </section>
  </div>
</div>