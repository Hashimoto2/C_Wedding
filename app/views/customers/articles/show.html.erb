<div class="row">
  <div class="col-xs-8"><br><br><br><br><br><br>
    <section>
      <table class="table">
        <thead></thead>
        <tbody>
    		    <td>
    		      <div class="name11"><%= @article.title %></div>
    		      <div class="image11"><%= attachment_image_tag @article, :image, size:'200x170' %></div>
    		      <div class="name11"><%= @article.introduction %></div>
            </td>
            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td><%= link_to "編集する", edit_customers_article_path(@article.id) %></td>
            </tr>
        <tbody>
      </table>
    </section>
     <table class="comments_<%= @article.id %>">
                <%= render 'customers/comments/comment', article: @article %>
            </table>
						<%= form_with(model:[@article, @comment],url: customers_article_comments_path(@article.id), method: :post,local:true ) do |f| %>
              <div class="row">
                <div class="col-sm-12">
                  <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントを入力する" %>
                </div>
              </div>
              <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
            <% end %>
  </div>
  <div class="col-xs-3"><br><br><br><br><br><br>
    <table class="table table-bordered genre-table">
    <thead>
      <tr>
        <th>カテゴリー検索</th></th>
      </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td>
          <%= link_to category.name, search_path('search[value]': category.id, 'search[how]': "match") %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <h5>カレンダー</h5>
</div>