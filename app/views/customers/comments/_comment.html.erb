<% article.comments.each do |comment| %>
  <tr>
    <td>
      <div class="comment-body bb">
        <div class="comment-avatar">
          <div class="avatar">
            <%= attachment_image_tag(comment.customer, :profile_image, :fill, 50, 50 ) %>
          </div>
</div>
          </td>
          <td>
            <div class="comment-text">
              <div class="comment-author clearfix">
                <a href="#" class="link-author"><%= comment.customer.last_name %><%= comment.customer.first_name %>さん</a>
              </div>
          </td>
          <td>
              <div class="comment-entry"><%= comment.comment %></div>
          </td>
            <% if comment.customer == current_customer %>
			        <td><%= link_to "Destroy", customers_article_comment_path(article, comment), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_article_#{@article.id}", remote: true %></td>
		            <% end %>
		        </tr>
            </div>
          </div>
        </tr>
<% end %>