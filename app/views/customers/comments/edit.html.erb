<!-- 口コミ入力フォーム -->
<div class="col-xs-10">
  <div class="comment1">
    <%= form_for @comment, url:customers_article_comment_path(@article.id), method: :patch do |f| %><br><br><br><br><br>

      <!--エラーメッセージ-->
      <%#= render 'layouts/error_messages', model: f.object %>

       <!--評価-->
      <div class="form-group row" id="star">
        <%= f.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
        <%= f.hidden_field :rate, id: :review_star %>
      </div>

       <!--評価javascript-->
      <script>
      $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        score: '<%= @comment.rate %>',
        scoreName: 'comment[rate]',
        half: true,
      });
      </script>

       <!--口コミ-->
      <div class="form-group row">
        <%= f.label :comment, '口コミ内容 ', class:'col-md-3 col-form-label' %>
        <div class="col-md-9">
          <%= f.text_area :comment, class: "form-control", rows: "8",
            placeholder:'口コミ内容がなくても、タイトルと評価のみで投稿できます。
      まずは投稿してみましょう！投稿してから編集もできますよ！' %>
        </div>
      </div>

       <!--確認ボタン-->
      <div class="form-group row justify-content-end">
        <div class="col-md-9">
          <%= f.submit '変更を保存する', class:"btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<!-- /口コミ入力フォーム -->
