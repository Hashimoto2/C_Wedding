<div class="row">
  <div class="col-xs-offset-3 col-xs-11"><br><br><br><br>
<h4><span style="background-color: #afeeee">登録情報編集</span></h4>

<%= form_with model:@customer, url: customers_customer_path(@customer.id), method: :patch, local:true do |f| %>

  <div class="field">
    <%= f.label :名前（姓） %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
    <%= f.label :（名） %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ（セイ） %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email" %>
    <%= f.label :（メイ） %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>（<%= @minimum_password_length %>文字以上）</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用）  %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <br>
  <%= link_to '退会する', quit_path, class: "btn btn-danger" %>
  <br>
  <div class="actions">
    <%= f.submit "編集内容を保存する", class: 'btn btn-success active' %>
  </div>
<% end %>
<br><br><br>
</div>
  </div>