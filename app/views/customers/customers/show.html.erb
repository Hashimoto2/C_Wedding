<div class="row">
  <div class="col-xs-offset-1 col-xs-11"><br><br><br><br><br>
    <h4><span style="background-color: #afeeee">マイページ</span></h4>
    <br>
    <%= render 'customers/customers/profile', customer: @customer %>
  </div>
  <div class="col-xs-8">
    <div class="article1">
      <section>
        <table class="table"><br><br><br>
          <thead>
            <tr>
              <th>お気に入りの記事</th>
            </tr>
          </thead>
          <tbody class="font1">
            <% @articles.each do |article| %>
              <tr>
        		    <td>
        		      <%= link_to customers_article_path(article.id) do %>
                    <%= attachment_image_tag article, :image, size: "200x170" %><br>
                  <% end %>
                </td>
                <td><div class="name11"><%= article.title %></div></td>
                <td><div class="name11"><%= article.introduction %></div></td>
              </tr>
            <% end %>
          <tbody>
        </table>
      </section>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-2">
      <div class="box B_1">
        <div><%= link_to "My投稿記事", mypage_path %></div>
        <div><%= link_to "コメント投稿一覧", articles_customers_customer_path(@customer) %></div>
      </div>
    </div>
</div>